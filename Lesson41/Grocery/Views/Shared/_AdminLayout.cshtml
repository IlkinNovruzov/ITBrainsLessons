<!DOCTYPE html>
<html>
<title>@ViewData["Title"] - AdminPanel</title>
<meta name="viewport" content="width=device-width, initial-scale=1"/>
<link href="https://www.w3schools.com/w3css/4/w3.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/frontend/other/_adminlayout.css" rel="stylesheet" />
<body>

    <!-- Sidebar -->
    <div class="w3-sidebar w3-light-grey w3-bar-block" style="width:10%">
        <h3 class="w3-bar-item">Menu</h3>
        <a asp-area="" asp-controller="Grocery" asp-action="Home" class="w3-bar-item w3-button">Grocery</a>
        <a asp-area="" asp-controller="Admin" asp-action="AdminProduct" class="w3-bar-item w3-button">Products</a>
        <a href="#" class="w3-bar-item w3-button">Link 3</a>
    </div>

    <!-- Page Content -->
    <div style="margin-left:10%">


        <div class="w3-container w3-teal">
            <h1>My Page</h1>
        </div>
        <div class="w3-container">
            @RenderBody()
        </div>
    </div>

</body>
</html>
